<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="lara">

    <xacro:include filename="$(find lara_model)/urdf/simulation/gazebo_base.xacro" /> 
    <xacro:include filename="$(find lara_model)/urdf/simulation/gazebo_laser.xacro" />
    <xacro:include filename="$(find lara_model)/urdf/pioneer3dx_wheel.xacro" />

    <link name="base_link">
    </link>

    <link name="chassis">
        <visual>
            <geometry>
                <mesh filename="package://lara_model/objs/Chassis.obj"/>
            </geometry>            
            <origin xyz="0 0 0" rpy="0 0 ${-3.14159265/2}"/>
        </visual>
        <collision>
            <geometry>
                <mesh filename="package://lara_model/objs/Chassis.obj"/>
            </geometry>   
            <origin xyz="0 0 0" rpy="0 0 ${-3.14159265/2}"/>
        </collision>
        <inertial>
            <mass value="20"/>
            <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.2"/>
            <origin xyz="-0.20 0 0" rpy="0 0 ${-3.14159265/2}"/>
        </inertial>
    </link>

    <joint name="base_link_to_chassis" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
    </joint>

    <!-- WHEELS -->
    <xacro:p3dx_wheel suffix="right" parent="chassis" reflect="1"/>
    <xacro:p3dx_wheel suffix="left" parent="chassis" reflect="-1"/>

    <!-- Swivel -->
    <link name="swivel">
        <inertial>
        <mass value="0.1"/>	
        <origin xyz="0 0 0"/>
        <inertia ixx="0.01" ixy="0" ixz="0"
                iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
        <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry name="pioneer_geom">
            <mesh filename="package://lara_model/meshes/swivel.stl"/>
        </geometry>
        <material name="swivel">
            <color rgba="0.5 0.5 0.5 1"/>
        </material>
        </visual>
    </link>
    <gazebo reference="swivel">
        <material value="Gazebo/Black"/>
    </gazebo>

    <joint name="base_swivel_joint" type="continuous">
        <origin xyz="-0.27 0 -0.19" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="100" velocity="100" k_velocity="0" />
        <joint_properties damping="0.0" friction="0.0" />
        <parent link="chassis"/>
        <child link="swivel"/>
    </joint>

    <!-- Center Wheel + Hubcap -->
    <link name="center_hubcap">
        <inertial>
        <mass value="0.01"/>	
        <origin xyz="0 0 0"/>
        <inertia ixx="0.012411765597" ixy="-0.000711733678" ixz="0.00050272983"
                iyy="0.015218160428" iyz="-0.000004273467" izz="0.011763977943"/>
        </inertial>
        <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry name="pioneer_geom">
            <mesh filename="package://lara_model/meshes/center_hubcap.stl"/>
        </geometry>
        <material name="swivel">
            <color rgba="0.5 0.5 0.5 1"/>
        </material>
        </visual>
    </link>
    <gazebo reference="center_hubcap">
        <material value="Gazebo/Black"/>
    </gazebo>

    <joint name="swivel_hubcap_joint" type="continuous">
        <origin xyz="-0.026 0 -0.016" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <anchor xyz="0 0 0"/>
        <limit effort="100" velocity="100" k_velocity="0" />
        <joint_properties damping="0.0" friction="0.0" />
        <parent link="swivel"/>
        <child link="center_wheel"/>
    </joint>

    <link name="center_wheel">
        <inertial>
        <mass value="0.1"/>	
        <origin xyz="0 0 0"/>
        <inertia ixx="0.012411765597" ixy="-0.000711733678" ixz="0.00050272983"
                iyy="0.015218160428" iyz="-0.000004273467" izz="0.011763977943"/>
        </inertial>
        <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry name="pioneer_geom">
            <mesh filename="package://lara_model/meshes/center_wheel.stl"/>
        </geometry>
        <material name="WheelBlack">
            <color rgba="0.117 0.117 0.117 1"/>
        </material>
        </visual>
        <collision>
        <origin xyz="0 0 0" rpy="${-3.1415927/2.0} 0 0"/>
        <geometry>
            <cylinder radius="0.0375" length="0.0314"/>
        </geometry>
        </collision>
    </link>
    <gazebo reference="center_wheel">
        <material value="Gazebo/Black"/>
    </gazebo>

    <joint name="center_wheel_joint" type="fixed">
        <origin xyz="-0.0035 0 -0.001" rpy="0 0 0"/>
        <parent link="center_wheel"/>
        <child link="center_hubcap"/>
    </joint>

  <!-- SENSORS -->
  <joint name="hokuyo_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0 0.075 -0.05" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="hokuyo_link"/>
  </joint>

  <!-- Hokuyo Laser -->
  <link name="hokuyo_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size="0.05 0.05 0.07"/>
      </geometry>
    </collision>

    <!-- TODO: USE HOKUYO MODEL  -->
    <!-- <visual name="visual">
    <origin xyz="0 0.075 -0.05" rpy="0 0 0"/>
    <geometry>
        <box size="0.05 0.05 0.07" />
    </geometry>
    </visual> -->

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

  <!-- Plugins -->
  <xacro:gazebo_base reference="p3dx"/> 
  <xacro:gazebo_laser reference="hokuyo_link"/>

</robot>